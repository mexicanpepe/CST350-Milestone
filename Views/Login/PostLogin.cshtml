@{
    ViewData["Title"] = "Minesweeper";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CST350_Minesweeper</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .button-container {
            margin-top: 20px;
        }

        .btn-custom {
            font-size: 1.2rem;
            padding: 10px 20px;
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="my-4">@ViewData["Title"]</h1>

        <div class="button-container">
            <!-- Start Game Button -->
            <form method="post" asp-controller="GameBoard" asp-action="StartGame" class="d-inline">
                <button type="submit" class="btn btn-success btn-custom">
                    <i class="fas fa-play"></i> Start New Game
                </button>
            </form>

            <!-- Logout Button -->
            <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                <button type="submit" class="btn btn-danger btn-custom">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>

        <p class="mt-4">
            Welcome to Minesweeper! Click "Start New Game" to begin playing or "Logout" to end your session.
        </p>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
